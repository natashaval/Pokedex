<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/bt_primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="all types"
        android:layout_marginEnd="@dimen/margin_16"
        app:layout_constraintEnd_toStartOf="@id/bt_secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary type"
        app:layout_constraintEnd_toEndOf="@id/bt_primary"
        app:layout_constraintTop_toBottomOf="@id/bt_primary"
        app:layout_constraintStart_toStartOf="@id/bt_primary" />

    <Button
        android:id="@+id/bt_secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="all types"
        android:layout_marginStart="@dimen/margin_16"
        app:layout_constraintBottom_toBottomOf="@id/bt_primary"
        app:layout_constraintTop_toTopOf="@id/bt_primary"
        app:layout_constraintStart_toEndOf="@id/bt_primary"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary type"
        app:layout_constraintEnd_toEndOf="@id/bt_secondary"
        app:layout_constraintTop_toBottomOf="@id/bt_secondary"
        app:layout_constraintStart_toStartOf="@id/bt_secondary" />

</androidx.constraintlayout.widget.ConstraintLayout>